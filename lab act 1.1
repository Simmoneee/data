        }
    }

    @Override
    public void withdraw(double amount) {
        if (amount > 0 && amount <= balance) {
            balance -= amount;
            System.out.println(amount + " withdrawn from Current Account.");
        } else {
            System.out.println("Not enoguh balance or invalid withdrawal amount.");
        }
    }
}
